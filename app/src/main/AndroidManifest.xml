<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokedexd">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Pokedexd">
        <activity
            android:name=".menus.MenuPrincipalSesionIniciadaActivity"
            android:exported="true" />
        <activity
            android:name=".autenticacion.RegistroActivity"
            android:exported="true" />
        <activity
            android:name=".BuscarObjetosActivity"
            android:exported="true" />
        <activity
            android:name=".BuscarHabilidadActivity"
            android:exported="true" />
        <activity
            android:name=".BuscarTiposActivity"
            android:exported="true"/>
        <activity
            android:name=".menus.MenuPrincipalActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menus.MenuBuscadorActivity"
            android:exported="true" />
        <activity
            android:name=".BuscarPokemonActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>