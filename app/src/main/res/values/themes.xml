<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedexd" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rojo_poke</item>
        <item name="colorPrimaryVariant">@color/rojo_poke</item>

        <!-- Secondary brand color. -->
        <item name="background">@drawable/action_bar</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->

        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="Theme.Pokedexd.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryVariant">@color/rojo_poke</item>
    </style>

    <style name="Theme.Pokedexd.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pokedexd.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>