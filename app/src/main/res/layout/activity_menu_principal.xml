<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menus.MenuPrincipalActivity"
    android:background="@drawable/fondopokedex">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/pokedexdcurvado" />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:background="@drawable/borde_button_ama">

                    <Button
                        android:id="@+id/MenuBtnBuscador"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:fontFamily="@font/baloo"
                        android:padding="15dp"
                        android:text="@string/btnBuscador"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_gravity="center">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:background="@drawable/borde_button_azu">

                    <Button
                        android:id="@+id/MenuBtnEquipo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:fontFamily="@font/baloo"
                        android:padding="15dp"
                        android:text="@string/btnEquipos"
                        android:textColor="@color/white"
                        android:textSize="28sp" />

                </RelativeLayout>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_gravity="center">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/borde_button_ver">

                <Button
                    android:id="@+id/MenuBtnSesion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:fontFamily="@font/baloo"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>


</ScrollView>
