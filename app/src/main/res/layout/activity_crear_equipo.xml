<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CrearEquipo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equipos.CrearEquipoActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CrearEquipoRecListaEquipo"
        android:layout_width="332dp"
        android:layout_height="475dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CrearEquipoEtxBuscaPokemon"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/CrearEquipoBtnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/GuardarEquipo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CrearEquipoRecListaEquipo"
        app:layout_constraintVertical_bias="0.516" />

    <Button
        android:id="@+id/CrearEquipoBtnExportar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ExportarEquipo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toEndOf="@+id/CrearEquipoBtnGuardar"
        app:layout_constraintTop_toBottomOf="@+id/CrearEquipoRecListaEquipo"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:id="@+id/CrearEquipoTxtA単ade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BuscaPokemonA単ade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/CrearEquipoEtxBuscaPokemon"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="@string/NombrePokemon"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CrearEquipoTxtA単ade"
        app:layout_constraintVertical_bias="0.003" />

    <ImageButton
        android:id="@+id/CrearEquipoIbtA単ade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toEndOf="@+id/CrearEquipoEtxBuscaPokemon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        app:srcCompat="@android:drawable/ic_input_add" />
</androidx.constraintlayout.widget.ConstraintLayout>